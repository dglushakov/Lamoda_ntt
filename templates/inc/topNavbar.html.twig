{% set userIsAdmin = false %}
    {% for role in app.user.roles %}
        {% if role=='ROLE_ADMIN' %}
            {% set userIsAdmin = true %}
        {% endif %}
    {% endfor %}
<div class="row border-bottom m-1 bg-light text-center">
    <div class="col">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <p class="mx-3 bg-info">Interfaces</p>
                {% if userIsAdmin %}
                    <a class="dropdown-item" href="{{ path('userlist') }}">Admin</a>
                {% endif %}
                <div class="dropdown-divider"></div>

                <p class="mx-3 bg-info">Reports</p>
                {% if userIsAdmin %}
                    <a class="dropdown-item" href="{{ path('reports') }}">Work time report</a>
                {% endif %}
                <div class="dropdown-divider"></div>

            </div>
        </div>
    </div>
    <div class="col-4">
        {% for role in app.user.roles %}
            {% if role=='ROLE_PEEP' %}
                {% if attendancesForApproval|length > 0 %}
                    <div class="bg-danger"><a class="badge badge-pill badge-danger" href="#finesTable">Штрафы({{ attendancesForApproval|length }})</a></div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
    <div class="col text-lg-center">Вы зашли как: {{ app.user.username }}</div>
    <div class="col text-lg-center">Ваш участок: {{ app.user.sector }}</div>
    <div class="col text-lg-center">Ваша смена:
        {% set userIsPeep = false %}
        {% for role in app.user.roles %}
            {% if role=='ROLE_PEEP' %}
                {% set userIsPeep = true %}
                <a class="btn btn-secondary dropdown-toggle btn-sm" href="#" role="button"
                   id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true"
                   aria-expanded="false">
                    {{ app.user.shift }}
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    {% for shift in constant('App\\Entity\\USER::NUMBERS_OF_SHIFTS') %}
                        <a class="dropdown-item" href="/setShift/{{ shift }}">{{ shift }}</a>
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
        {% if not userIsPeep %}
            {{ app.user.shift }}
        {% endif %}

    </div>
    <div class="col"><a href="{{ path('app_logout') }}" class="btn btn-primary">Выйти</a></div>
</div>