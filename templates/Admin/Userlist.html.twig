{% extends 'base.html.twig' %}

{% block title %}
    Test
{% endblock %}
{% block body %}

    <div class="container-fluid">
        {% include 'inc/topNavbar.html.twig' %}
        <div class="row">
            <div class="col-6">
                <div class="h1 text-center">На участках</div>
            </div>
            <div class="col-5">
                <div class="h1 text-center">Пользователи</div>
            </div>
        </div>
        <div class="row">

            <div class="col-6">
                {% include 'inc/activeUsersTable.html.twig' %}
            </div>

            <div class="col-6">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Пользователь</th>
                        <th scope="col">Роль</th>
                        <th scope="col">Участок</th>
                        <th scope="col">Смена</th>
                        <th scope="col">Ред.</th>
                        <th scope="col">Удалить</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>
                                {{ user.username }}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {% if role == 'ROLE_ADMIN' %}
                                        Admin
                                    {% elseif role =='ROLE_SECTOR_MANAGER'%}
                                        Sector manager
                                    {% elseif role =='ROLE_PEEP' %}
                                        Peep
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {{ user.sector }}
                            </td>
                            <td>
                                {{ user.shift }}
                            </td>
                            <td>
                                <a href="/userlist/edit/{{ user.id }}" class="btn btn-info btn-sm"><img alt="edit" width="20px" src="{{ asset('img/edit.png') }}"></a>
                            </td>
                            <td>
                                <a href="#" data-href="/userlist/delete/{{ user.id }}" data-toggle="modal"
                                   data-target="#confirm-delete" class="btn btn-sm delete-type">
                                    <img alt="delete" width="20px" src="{{ asset('img/cancel.png') }}">
                                </a>
                                {% include 'inc/deleteConfirmationModal.html.twig' %}
                            </td>

                        </tr>
                    {% endfor %}

                    <tr>
                        <td colspan="8">
                            {% form_theme addUserForm 'bootstrap_4_horizontal_layout.html.twig' %}
                            {{ form_start(addUserForm) }}
                            {{ form_widget(addUserForm) }}
                            <input type="submit" class="btn btn-success" value="Add new"/>
                            {{ form_end(addUserForm) }}
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>

        </div>


    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
    </script>
{% endblock %}